#!/usr/bin/python3

import sys
import os
from os.path import join, expanduser, isdir, exists

def is_debug_mode():
    if isdir('.git'):
        return True
    return False

def replace_dic(dict_path, text):
    if not exists(dict_path):
        return text
    for line in open(dict_path, 'r').readlines():
        bad = line.split('=')[0]
        if line.find('=') == -1:
            continue
        good = line.split('=')[1].strip()
        text = text.replace(bad, good)
    return text

if __name__ == "__main__":
    if len(sys.argv) <= 1:
        print("first argument is mising for the text to read")
        exit(0)
    if len(sys.argv) == 2:
        print("a secong argument is missing : .wav path")
        exit(0)
    text = sys.argv[1]
    path = sys.argv[2]
    lang = 'fr-FR'
    CONF_DIR = '.'
    if not is_debug_mode():
        CONF_DIR = join(expanduser('~'), '.config/gSpeech')

    text = text.replace('\"', '')
    text = text.replace('`', '')
    text = text.replace('Â´', '')
    text = text.replace('-','')

    dict_path = CONF_DIR + '/' + lang + '.dic'
    text = replace_dic(dict_path, text)
    if len(text) <= 32768:
        cmd = 'pico2wave -l %s -w %s \"%s\" ' % ( lang, path, text )
        os.system(cmd)

    elif os.path.isfile('/usr/bin/sox'):
        discours = text.split('\n\n')
        cmds = []
        names = []
        text = ''
        for idx,paragraph in enumerate(discours):
            text += paragraph
            if idx == len(discours)-1 or len(text) + len(discours[idx+1]) >= 32767:
                filename = CACHEFOLDER + 'speech' + str(idx) + '.wav'
                cmds.append('pico2wave -l %s -w %s \"%s\" ' % ( lang, filename, text ))
                names.append(filename)
                text = ''

        nproc = int(.5 * multiprocessing.cpu_count())
        if nproc == 0:
            nproc = 1
        multiprocessing.Pool(nproc).map(os.system, cmds)
        os.system('sox %s %s' % ( ' '.join(names), path ))
        for fichier in names:
            os.remove(fichier)
